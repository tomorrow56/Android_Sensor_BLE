<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/samplingRateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="サンプリングレート:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        android:layout_marginTop="24dp" />

    <Spinner
        android:id="@+id/samplingRateSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/samplingRateLabel"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="開始"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/stopButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/samplingRateSpinner"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="停止"
        android:textSize="18sp"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/startButton"
        app:layout_constraintTop_toBottomOf="@id/samplingRateSpinner"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/statusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ステータス:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startButton"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="停止中"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusLabel"
        android:layout_marginTop="8dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#F0F0F0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="センサーデータ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- 加速度センサー -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加速度センサー (m/s²)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/accelerometerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X: --\nY: --\nZ: --"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp" />

            <!-- ジャイロスコープ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ジャイロスコープ (rad/s)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/gyroscopeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X: --\nY: --\nZ: --"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp" />

            <!-- 光センサー -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="光センサー (lux)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/lightText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="照度: --"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp" />

            <!-- GPS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/gpsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="緯度: --\n経度: --\n高度: --\n精度: --\n速度: --"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp" />

            <!-- 磁気センサー -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="磁気センサー (μT)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/magnetometerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X: --\nY: --\nZ: --"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp" />

            <!-- 近接センサー -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="近接センサー (cm)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/proximityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="距離: --"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp" />

            <!-- 重力センサー -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="重力センサー (m/s²)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/gravityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X: --\nY: --\nZ: --"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
